<?xml version="1.0"?>
<launch>

	<!-- Arguments -->
	<arg name="model" default="$(find soma_description)/urdf/test.urdf.xacro" />
	<arg name="world_model" default="simple3.world" />
	<arg name="rvizconfig" default="$(find soma_description)/rviz/simulator.rviz" />
	<arg name="gazebo" default="true" /> 
	<arg name="gui_rviz" default="true" />
	<arg name="gui_gazebo" default="true" />
	<arg name="steering" default="true" />

	<!-- Gazebo -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="use_sim_time" value="true" />
		<arg name="gui" value="$(arg gui_gazebo)" />
		<arg name="world_name" value="$(arg world_model)" />
		<arg name="paused" value="false"/>
	</include>

	<!-- Parameters -->
	<param name="robot_description" command="$(find xacro)/xacro $(arg model)" />

	<rosparam command="load" file="$(find soma_description)/config/joint_state_controller.yaml" ns="test_joint_state_controller" />
	<rosparam command="load" file="$(find soma_description)/config/ackermann_steering_controller.yaml" ns="/test_ackermann_steering_controller" />
	<!--rosparam command="load" file="$(find soma_description)/config/diff_drive_controller.yaml" ns="test_diff_drive_controller" /-->
	<rosparam command="load" file="$(find soma_description)/config/wheel_rotate_velocity_controller.yaml" ns="/test_wheel_rotate_velocity_controller" />
	<rosparam command="load" file="$(find soma_description)/config/wheel_hinge_position_controller.yaml" ns="/test_wheel_hinge_position_controller" />

	<!-- Nodes -->
	<node name="controller_spawner" pkg="controller_manager" type="spawner"
		args="test_joint_state_controller test_wheel_rotate_velocity_controller test_wheel_hinge_position_controller test_ackermann_steering_controller" />

	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

	<node name="robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
		<param name="default_topic" value="/test_ackermann_steering_controller/cmd_vel" />
	</node>
	<!-- <node name="keyboard_control" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" /> -->

	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
		args="-param robot_description -urdf -model test" />


	<!-- Rviz -->
	<node if="$(arg gui_rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />
	
</launch>
