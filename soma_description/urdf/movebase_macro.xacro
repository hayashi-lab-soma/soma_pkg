<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dtw_robot">

	<!-- Materials -->
	<material name="gray">
		<color rgba="0.5 0.5 0.5 2.5" />
	</material>
	<material name="red">
		<color rgba="1.0 0.0 0.0 2.5" />
	</material>


	<!-- Wheel macro -->
	<macro name="wheel_macro" params="parent prefix xyz">
		
		<!-- General properties used for inertia computation -->
		<property name="mass" value="0.5" />
		<property name="radius" value="0.2" />
		<property name="length" value="0.1" />

		<!-- Joint -->
		<joint name="${prefix}_joint" type="continuous">
			<origin xyz="${xyz}" rpy="${radians(-90)} 0.0 0.0" />
			<parent link="${parent}" />
			<child link="${prefix}_link" />
			<axis xyz="0 0 1" />
			<limit velocity="12.0" effort="0.4" />
			<dynamics damping="0.1" />
		</joint>

		<!-- Transmission -->
		<transmission name="${prefix}_trans">
			<type>
				transmission_interface/SimpleTransmission
			</type>
		
			<!-- Joint -->
			<joint name="${prefix}_joint">
				<hardwareInterface>
					hardware_interface/VelocityJointInterface
				</hardwareInterface>
			</joint>

			<!-- Actuator -->
			<actuator name="${prefix}_motor">
				<hardwareInterface>
					hardware_interface/VelocityJointInterface
				</hardwareInterface>
				<mechanismReduction>
					1
				</mechanismReduction>
			</actuator>

		</transmission>
		<!-- END transmission -->

		<!-- Link -->
		<link name="${prefix}_link">
			
			<!-- Inertia part -->
			<inertial>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<mass value="${mass}" />
				
				<!-- Inertia matrix of a cylinder -->
				<inertia ixx="${mass / 12 * (3 * radius ** 2 + length ** 2)}" ixy="0.0" 
						 ixz="0.0" iyy="${mass / 12 * (3 * radius ** 2 + length ** 2)}" 
						 iyz="0.0" izz="${mass / 2 * radius ** 2}" />
				<!-- Old values: ixx = iyy = izz = 0.0001 -->
			</inertial>

			<!-- Visual part -->
			<visual>
				<geometry>
					<cylinder radius="${radius}" length="${length}" />
				</geometry>
				<material name="red" />
			</visual>

			<!-- Collision part -->
			<collision>
				<geometry>
					<cylinder radius="${radius}" length="${length}" />
				</geometry>
			</collision>

		</link>
		<!-- END link -->

		<!-- Gazebo additional parameters -->
		<gazebo reference="${prefix}_link">
			<material>
				Gazebo/Red
			</material>
			<mu1 value="2.5" />
			<mu2 value="2.5" />
			<kp value="50000" />
			<kd value="10" />
		</gazebo>

	</macro>
	<!-- END wheel macro -->
	

	<!-- Body and ball macro -->
	<macro name="body_macro" params="parent">

		<!-- General properties used for inertia computation -->
		<property name="mass" value="1.0" />
		<property name="width" value="0.6" />
		<property name="depth" value="0.40" />
		<property name="height" value="0.6" />
		
		<!-- Body joint -->
		<joint name="body_joint" type="fixed">
			<parent link="${parent}" />
			<child link="body_link" />
			<origin xyz="0 0 0.4" rpy="0.0 0.0 0.0" />
		</joint>
		
		<!-- Body link -->
		<link name="body_link">
			
			<!-- Inertial part -->
			<inertial>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<mass value="${mass}" />
				
				<!-- Inertia matrix of a parallelepiped -->
				<inertia ixx="${mass / 12 * (depth ** 2 + height ** 2)}" ixy="0.0"
						 ixz="0.0" iyy="${mass / 12 * (width ** 2 + height ** 2)}" 
						 iyz="0.0" izz="${mass / 12 * (width ** 2 + depth ** 2)}" />
				<!-- Old values: ixx = iyy = izz = 0.001 -->
			</inertial>
			
			<!-- Visual part -->
			<visual>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<geometry>
					<box size="${width} ${depth} ${height}" />
				</geometry>
				<material name="gray" />
			</visual>
			
			<!-- Collision part -->
			<collision>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<geometry>
					<box size="${width} ${depth} ${height}" />
				</geometry>
			</collision>

		</link>
		<!-- END link -->

		<!-- Gazebo additional parameters -->
		<gazebo reference="body_link">
			<material>
				Gazebo/Gray
			</material>
		</gazebo>

		<!-- Ball joint -->
		<joint name="ball_joint" type="fixed">
			<parent link="${parent}" />
			<child link="ball_link" />
			<origin xyz="-0.14 0 0.1" rpy="0.0 0.0 0.0" />
		</joint>

		<!-- Ball link -->
		<link name="ball_link">

			<!-- Visual part -->
			<visual>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<geometry>
					<sphere radius="0.1" />
				</geometry>
				<material name="gray" />
			</visual>

			<!-- Collision part -->
			<collision>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<geometry>
					<sphere radius="0.1" />
				</geometry>
				<material name="gray" />
			</collision>

		</link>
		<!-- END link -->

		<!-- Gazebo aditionnal parameters -->
		<gazebo reference="ball_link">
			<material>
				Gazebo/Gray
			</material>
			<mu1 value="0.5" />
			<mu2 value="0.5" />
		</gazebo>

	</macro>
	<!-- END body and ball macro -->
	

	<!-- IMU macro -->
	<macro name="imu_macro" params="parent">

		<!-- General properties used for inertia computation -->
		<property name="mass" value="0.5" />
		<property name="width" value="0.05" />
		<property name="depth" value="0.05" />
		<property name="height" value="0.025" />
		
		<!-- Joint -->
		<joint name="imu_joint" type="fixed">
			<parent link="${parent}" />
			<child link="imu_link" />
			<origin xyz="0 0 1.45" rpy="0.0 0.0 0.0" />
		</joint>
		
		<!-- Link -->
		<link name="imu_link">
			
			<!-- Inertial part -->
			<inertial>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<mass value="${mass}" />
				
				<!-- Inertia matrix of a parallelepiped -->
				<inertia ixx="${mass / 12 * (depth ** 2 + height ** 2)}" ixy="0.0"
						 ixz="0.0" iyy="${mass / 12 * (width ** 2 + height ** 2)}" 
						 iyz="0.0" izz="${mass / 12 * (width ** 2 + depth ** 2)}" />
			</inertial>
			
			<!-- Visual part -->
			<visual>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<geometry>
					<box size="${width} ${depth} ${height}" />
				</geometry>
				<material name="red" />
			</visual>
			
			<!-- Collision part -->
			<collision>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
				<geometry>
					<box size="${width} ${depth} ${height}" />
				</geometry>
			</collision>

		</link>
		<!-- END link -->

		<!-- Gazebo additional parameters -->
		<gazebo reference="imu_link">
			<material>
				Gazebo/Red
			</material>
		</gazebo>
	
	</macro>
	<!-- END IMU macro -->


	<!-- Realsense macro -->
	<macro name="realsense_macro" params="parent prefix *origin">
		<link name="camera_${prefix}_mount_link" />
	
		<joint name="camera_${prefix}_mount_joint" type="fixed">
			<insert_block name="origin" />
			<parent link="${parent}" />
			<child link="camera_${prefix}_mount_link" />
		</joint>

	</macro>
	<!-- END Realsense macro -->

</robot>
